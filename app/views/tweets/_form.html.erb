<%= form_with(model: tweet) do |form| %>
  <% if tweet.errors.any? %>
    <div style="color: red; margin-bottom: 20px;">
      <h2><%= pluralize(tweet.errors.count, "Errorcito") %> Prohiben que estos twwts se publiquen </h2>

      <ul>
        <% tweet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :description, style: "display: block; font-weight: bold;" %>
    <%= form.text_area :description, style: "width: 80%; padding: 10px;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :username, style: "display: block; font-weight: bold;" %>
    <%= form.text_field :username, style: "width: 80%; padding: 10px;" %>
  </div>

  <div>
    <%= form.submit style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; cursor: pointer;" %>
  </div>
<% end %>
